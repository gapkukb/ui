+block( "" )
  +modifier( pretty-bar )
    &::-webkit-scrollbar
      width 8px
      height 4px
      background-color transparent

    &::-webkit-scrollbar-track
      border-radius 4px
      background-color rgba( 255, 255, 255, 0.25 )
      cursor pointer

    &::-webkit-scrollbar-thumb
      height 20px
      border-radius 4px
      background-color #999
      opacity 0.5

      &:hover
        background-color rgba( #999, 1 )

  +modifier( half-char )
    &:before
      content "\2002" // &#x2002 in html;
      speak none

  +modifier( full-char )
    &:before
      content "\2003" // &#x2003  in html
      speak none
