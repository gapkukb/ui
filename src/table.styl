+block( table )
  width 100%
  border-spacing 0
  border-collapse collapse
  border-color pink
  table-layout fixed

  thead
    overflow hidden

  th
    position relative
    overflow hidden
    padding 8px 0
    height 100%
    white-space nowrap
    font-weight normal

  th
  td
    overflow hidden
    box-sizing border-box
    padding 10px
    padding-right 18px
    padding-left 18px
    min-width 0
    height 48px
    text-align left
    text-overflow ellipsis
    white-space normal
    word-break break-all

  +modifier( stripe )
    tr:nth-child(2n) td
      background-color #eee
      color #000

  +modifier( border )
    border 1px solid #dcdee2
    border-right 0
    border-bottom 0

  +modifier( hover )
    td
      transition background-color 300ms

    tbody>tr:hover>td
      background-color red
      color gold

  +element( row )
    +modifier( disabled )
      opacity 0.5
      pointer-events none

  +modifier( highlight )
    /
      ^[0]>tbody>^[1]
        &
        &>td
          background-color green
          color gold
